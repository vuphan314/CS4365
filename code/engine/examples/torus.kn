let A_1(n) = y^(n + 1)

let A_2(n) =
    -(t^2 + t^-2) * y^n + t^-2 * y^(n + 2) + t^2 * x^2 * y^n +
    x^2 * y^(n + 1)

let A_k(k, n) =
    t^-2 * A(k - 1, n + 1) - t^-4 * A(k - 2, n) + t^2 * x^2 * y^n -
    t^-2 * x^2 * y^n + x^2 * y^(n + 1)

let A(k, n) =
    A_1(n) if k = 1 else
    A_2(n) if k = 2 else
    A_k(k, n)

let test1 = A(3, -2)

let test2 = test1[t = im * t]

